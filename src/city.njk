      <a href="{{ '/' | url }}{{ r.citySlug }}/{{ r.airportSlug }}/{{ r.districtSlug }}/{{ r.areaSlug }}/">
        {{ r.airportName }} â†’ {{ r.districtName }} {{ r.areaName }}
      </a>
    </li>
  {% endif %}
{% endfor %}
